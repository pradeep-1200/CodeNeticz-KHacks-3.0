# MongoDB Connection
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Speech-to-Text Configuration
# Path to Python executable (optional - defaults to 'python')
# Example for Windows venv: d:\path\to\venv\Scripts\python.exe
# Example for Linux/Mac venv: /path/to/venv/bin/python
PYTHON_EXECUTABLE=python

# Path to STT utils directory (optional - defaults to current directory)
# Set this if your STT module is in a different location
# Example: d:\student_backend\Dysgraphia\stt
STT_PATH=

# Whisper Model (optional - tiny, base, small, medium, large)
# 'base' is recommended for a balance of speed and accuracy with multilingual support.
WHISPER_MODEL=base


# Server Configuration
PORT=5000
